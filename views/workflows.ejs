<!DOCTYPE html>
<html>
  <head>
    <% include partials/bshead.ejs %>
    <meta http-equiv="refresh" content="300" >
    <script>
  		function toggleVis(obj)
  		{
  			if(obj.style.display=='none')
  			{
  		   		obj.style.display = 'inline'
  		   	}
  			else
  			{
  				obj.style.display = 'none'
  			}
  		}
  	</script>
  </head>
  <body>
    <% include partials/nav.ejs %>
    <h2 id="bigheader" >Workflows</h2>
    <input type="date" id="start" name="trip-start"
       value="2018-07-22"
       min="2018-01-01" max="2018-12-31">
  <% data.forEach(function(item){ if((item.WorkflowName!= null && item.WorkflowName.indexOf('nexus')<0) || item.WorkflowName == null){  %>
    <div id="level3" class="container-fluid" padding="10 0 0 0">
      <div id="level2A" class="row" width="90%" style="padding-bottom: 2px;"">
        <div id="level1A" class="col-sm-3" style="background-color:yellow;">
          <h5 class="mb-1"><% if(item.WorkflowName!=null){ %>
            <%= item.WorkflowName.replace(/swft/, '').replace(/Default/, '').replace(/wfnexus/, 'Nexus').replace(/\//g,'') %><% } %>
          </h5>
          <% if(item.WorkflowName!=null){ %>
            <button class="badge badge-info badge-pill" style="outline: none;" onClick="toggleVis(this.parentNode.parentNode.parentNode.getElementsByTagName('div')[4])">i</button>
          <% } %>
        </div>
        <div id="level1B" class="col-sm-6" style="background-color:lightblue;">
            <p class="mb-1"><%= item.Job_JobFolder %></p>
            <small class="text-muted"><%= item.Job_Status %></small>
        </div>
        <div id="level1C" class="col-sm-3" style="background-color:orange;" >
          <small class="text-muted">
            <% if(item.Job_StartTime!=null){ %>
            Start:
            <%= item.Job_StartTime.toISOString().replace(/T/, ' ').replace(/\..+/, '') %>
            <% } %></small>
            <br/>
          <small class="text-muted">
            <% if(item.Job_EndTime!=null){ %>
            End:
            <%= item.Job_EndTime.toISOString().replace(/T/, ' ').replace(/\..+/, '') %>
            <% } %>
          </small>
        </div>
      </div>
      <div id="level2B" style="display: none;">
        <h6 class="mb-1"><%= item.AE_JobID %></h6>
      </div>
    </div>
  <%} }); %>
  </body>
</html>
